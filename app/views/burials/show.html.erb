<div id="indiv_container" class="two-col-common">
  <!-- container holds image(s) for individual burials -->
  <div class="indiv_imgs two-col-common">
      <!-- placeholder for main gravestone image -->
      <div class="img-main">
	<!-- only way to evalute null varcahr field in db, compare to "''" -->
	<% if @burials.photo_URL == "''" %>
	   <%= image_tag("http://placehold.it/280x392") %> 
	<% else %>
	   <% page_link = photo_link(@burials)  %>
	   <%= link_to image_tag(@burials.photo_URL), photo_link(@burials), :target => "_blank" %>
	<% end %>
      </div>
      <!-- placeholder for thumbnail gallery -->
      <div class="img-thumbs">
           <img class="img-thumb" src="http://placehold.it/192x143" alt="" />
           <img class="img-thumb" src="http://placehold.it/192x143" alt="" />
           <img class="img-thumb" src="http://placehold.it/192x143" alt="" />
	   <img class="img-thumb" src="http://placehold.it/192x143" alt="" />
      </div>
  </div>
  <!-- container containing all individual information for current burial -->
  <div id="indiv_info" class="two-col-common rounded-div">
    <ul class="nav nav-tabs">
     <h4>
       <%= @burials.last_name %>, <%= @burials.first_name %>
     </h4>
    </ul>
    <span>
      <p>
	<strong>Birth Date</strong>
	<%= @burials.birth_date %>
      </p>
      <p>
	<strong>Death Date</strong>
	<%= @burials.death_date %>
      </p>
      <p>
	<strong>Age</strong>
	
      </p>
      <p>
	<strong>Sex</strong>
	<%= @burials.sex %>
      </p>
      <p>
	<strong>Birth Place</strong>
	<%= @burials.birth_place %>
      </p>
      <p>
	<strong>Occupation</strong>
	<%= @burials.occupation %>
      </p>
    </span>

  </div> <!-- indiv_info -->
 
  <!-- inscription container for each burial -->
  <!-- NOTE: inscription text stored in mon_level table -->
  <div id="inscription" class="rounded-div">
    <ul class="nav nav-tabs">
     <h4>Inscription</h4>
    </ul>
    <span>
      <p>
	<% if @burials.monument %>
	     <%= @burials.monument.insc_transc %>
	<% else %>
	    No Inscription Available at this Time
	<% end %>
      </p>
    </span>
  </div>

  <!-- monument info container -->
  <div id="mon_info" class="rounded-div">
    <ul class="nav nav-tabs">
     <h4>Monument Info</h4>
    </ul>
    <span>


    </span>
    <!-- accordion style for more monument information -->
    <div class="accordion">
      <div class="accordion-group">
	<div class="accordion-heading">
	  <a href="#mon_collapse" data-toggle="collapse" class="accordion-toggle">
	    <h5>>>Load More Fields</h5>
	  </a>
	</div>
	<!-- accordion style for more information -->
	<div class="accordion-body collapse" id="mon_collapse">
	  <div class="accordion-inner">

	  </div>
	</div>
      </div>
    </div>

  </div> <!-- mon_info -->


</div>

<!-- individual burial side bar options -->
<div id="burial_sidebar" class="two-col-common sidebar">
  <%= render 'burial_sidebar' %>
</div>
