<% provide(:title, @user.first_name + @user.last_name) %>
<div class="inner-container">
  <!-- dashboard navigation tab -->
  <ul id="dash_tabs" class="nav nav-tabs">
    <li class="active">
      <%= link_to 'Profile', '#' %>
    </li>
    <li>
      <%= link_to 'Submitted Records', users_submitted_data_path(current_user) %>
    </li>
    <% if current_user.admin? %>
    <li>
      <%= link_to 'All Cemeteries', cemeteries_path %>
    </li>
    <% end %>
  </ul>

  <div class="container-fluid">
    <div id="dash_container" class="row-fluid">

      <div id="profile-tab">
        <div class="row">
          <aside class="span4">
            <section>
              <h1>
                <%= gravatar_for @user %>
                <%= @user.first_name + " " + @user.last_name %>
              </h1>
            </section>
          </aside>
        </div>
      </div>

    </div>
  </div>

</div>

<!-- included personal JS files to perform different tasks -->
<%# javascript_include_tag "custom/tabs_dashboard" %>
