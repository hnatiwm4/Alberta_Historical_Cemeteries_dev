
<h1>Cemetery Listing</h1>

<% @cemeteries.each do |cem| %>
<div class="rounded-div">
  <span>
   <p>
     <strong>Cemetery ID:</strong>
     <%= cem.id_cem_lev %>
   </p>

   <p>
     <strong>Cemetery Name:</strong>
     <%= cem.cem_name %>
   </p>
   <p>
     <strong>Last Updated:</strong>
     <%= cem.date_updated %>
   </p>
   <p>
     <strong>User id</strong>
     <%= cem.user_id %>
   </p>
   </span>
  <!-- to make div clickable, use CSS, pass key :id to query for clicked data-->
  <%= link_to '', cemetery_path(:id => cem.id_cem_lev), :class => 'div-clickable' %>
</div>
<br>
<% end %>
